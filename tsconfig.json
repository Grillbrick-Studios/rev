{
	"extends": "@tsconfig/node14/tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"dist",
		".yarn",
		".pnp.cjs"
	]
}
